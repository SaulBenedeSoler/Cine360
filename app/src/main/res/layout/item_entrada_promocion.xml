<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombrePromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            tools:text="Promoción de Verano" />

        <ImageView
            android:id="@+id/ivImagenPromocion"
            android:layout_width="285dp"
            android:layout_height="375dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tvDescripcionPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="Disfruta de un 2x1 en todas las películas los martes." />

        <TextView
            android:id="@+id/tvPrecioPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            tools:text="Precio: 10.00 €" />

        <Button
            android:id="@+id/btnEliminarEntradaPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/Header"
            android:text="Eliminar" />

    </LinearLayout>

</androidx.cardview.widget.CardView>